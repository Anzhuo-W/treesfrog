<!doctype html>
<html>
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="icon" type="image/x-icon" href="/images/favicon.ico">
    <link rel="stylesheet" href="/bundle.css">
    <title>Anzhuo's Blog</title>
  </head>
  <body>
    <main>
      <div class="page">
        <h2>Anzhuo's Blog</h2>
        {% for post in collections.post | reverse %}
          <div class="post">
            <h1>
              {{ post.data.title }}
            </h1>
            <h4>
              {{ post.data.time }}
            </h4>
            {{ post.content | safe }}
          </div>
        {% endfor %}
      </div>
    </main>
  </body>
</html>